<ul class="collection with-header">
  <li class="collection-header"><h5>Past Tasks</h5></li>
  <% @nc_events.each do |e| %>
  <!-- div class="row col s10" id="event_boxes"-->
  <li class="collection-item black-text">
    <p id="past_tasks">
      <%= e.short_description %>
    </p>
    <%= link_to finished_path(e.id), :remote => true do %>
      <span class="btn-floating btn-small waves-effect waves-light #ef5350"  id="finished"><i class="material-icons">done</i></span>
    <% end %>
    <%= link_to reschedule_path(e.id), :remote => true do %>
      <span class="btn-floating btn-small waves-effect waves-light red lighten-1" id="reschedule"><i class="material-icons">replay</i></span>
    <% end %>
  </li>
  <!-- /div-->
  <% end %>
</ul>
